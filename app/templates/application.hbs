<div class="w-screen h-screen flex flex-col items-center justify-center text-center bg-gray-800 overflow-auto select-none" style="min-width: 680px; min-height: 462px;">
  <div class="bg-white shadow relative" style="width: 640px; height: 320px;">
  {{!-- <div class="bg-white flex items-center justify-center shadow relative" style="width: 960px; height: 480px;"> --}}
    {{outlet}}
  </div>

  <div id="buttons" class="mt-8">
    <button id="btn-left" {{on "click" (fn this.triggerArcadeButton "left")}}></button>
    <button id="btn-green" class="bg-green" {{on "click" (fn this.triggerArcadeButton "green")}}></button>
    <button id="btn-red" class="bg-red" {{on "click" (fn this.triggerArcadeButton "red")}}></button>
    <button id="btn-right" {{on "click" (fn this.triggerArcadeButton "right")}}></button>
  </div>
</div>

<table class="text-left absolute bottom-0 right-0 text-white bg-black bg-opacity-50 m-2 pointer-events-none select-none transform scale-75" style="font-size:10px">
  <tr>
    <th class="py-1 px-2">levelType</th>
    <td class="py-1 px-2">{{json this.game.levelType}}</td>
  </tr>

  {{#each this.game.players as |player i|}}
    <tr>
      <th class="border-t pt-1 px-2">P{{add i 1}}:</th>
      <td class="border-t pt-1 px-2">{{json player}}</td>
    </tr>
  {{/each}}
</table>