    {{#if showConfirmation}}
      {{#if (eq this.game.levelType 1)}}
        <div class="absolute border bg-white w-4/5 inset-x-0 mx-auto top-0 p-8 mt-12">
          <p class="mb-4"><strong class="text-6xl">LEVEL{{this.currentLevel}}</strong></p>
          {{!-- <button {{on "click" this.select}} class="bg-green-500 inline-block text-white py-2 px-10 text-xl">NEXT</button> --}}
          <button {{on "click" this.select}} class="bg-green-500 text-white py-1 px-16 mr-2 text-base">NEXT</button>
          <button {{on "click" this.cancelConfirmation}} class="bg-red-500 text-white py-1 px-16 text-base">BACK</button>
        </div>
      {{/if}}

      {{#if (eq this.game.levelType 2)}}
        <div class="absolute border bg-white w-4/5 inset-x-0 mx-auto top-0 px-8 pt-4 pb-6 mt-6 text-center">
          <p>このレベルでスタートします</p>
          <div class="flex justify-center my-4">
            {{#each players as |player i|}}
              <div>
                <div class="border p-2 flex-1 mx-1 font-bold w-24 mb-1">
                  <span class="block text-lg leading-none">LEVEL</span>
                  <span class="block text-5xl leading-none">{{get playerLevels i}}</span>
                </div>
                PLAYER{{player}}
              </div>
            {{/each}}
          </div>

          <button {{on "click" this.select}} class="bg-green-500 text-white py-1 px-16 mr-2 text-base">NEXT</button>
          <button {{on "click" this.cancelConfirmation}} class="bg-red-500 text-white py-1 px-16 text-base">BACK</button>
        </div>
      {{/if}}
    {{/if}}
