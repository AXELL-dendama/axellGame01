  <div class="flex justify-between items-end px-4">
    {{#each players as |player i|}}
      <span class="border border-b-0 flex-1 mx-1 {{if (and (eq this.game.levelType 2) (eq this.currentPlayer i)) "py-2"}}">PLAYER{{player}}</span>
    {{/each}}
  </div>
