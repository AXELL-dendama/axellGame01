<div class="flex justify-center items-end px-1">
  {{#each this.players as |player i|}}
    <span class="border border-b-0 flex-1 mx-1 max-w-xs {{if (eq @currentPlayer i) "py-1 bg-red-100 active"}} {{if (eq this.game.winningPlayerIndex i) "winning"}}">
      {{#if (and @showPoints player.points)}}
        <span class="inline-block">{{player.points}}</span>
        <small class="inline-block text-xs transform origin-bottom-right scale-90">
          <span class="relative inline-block">
            {{#if (eq this.game.winningPlayerIndex i)}}
              <img src="{{this.rootURL}}icons/crown.svg" alt="Winning player" class="absolute w-3 h-3 -ml-1" style="left: 50%; bottom: 85%;">
            {{/if}}

            {{player.name}}
          </span>

          {{#if @showLevel}}
            <b class="inline-block text-xs bg-gray-100 border px-1 origin-left transform scale-75">Lv{{player.level}}</b>
          {{/if}}
        </small>

      {{else}}
          {{player.name}}

          {{#if @showLevel}}
            <b class="inline-block text-xs bg-gray-100 border px-1 origin-left transform scale-75">Lv{{player.level}}</b>
          {{/if}}
      {{/if}}
    </span>
  {{/each}}
</div>